server1 {

	listen 8080 8081 8082
	server_name www.site1.com pink
	client_max_body_size 70000

	error_page 301 pages/errors/301.html
	error_page 400 pages/errors/400.html
	error_page 403 pages/errors/403.html
	error_page 404 pages/errors/404.html
	error_page 413 pages/errors/413.html
	error_page 405 pages/errors/405.html
	error_page 500 pages/errors/500.html


	location / {
		root pages/site1
		upload_path /uploads
		index	index.htm index.html index.php
		allowed_methods	GET		true
	}

	location /pages {
		root pages
		upload_path /uploads
		allowed_methods	GET		true
	}

	location /pages/site1 {
		root pages/site1
		index pag1.html
		upload_path /uploads
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /pages/site1/uploads {
		root /pages/site1
		upload_path /uploads
		index	upload.html
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /sum {
		root pages/site1
		upload_path pages/site1
		cgi_pass	pass
		cgi sum.py
		index	sum.html
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	
	location /random {
		cgi_pass	pass
		cgi 		random/random
		root pages/site1
		allowed_methods	GET		true
		allowed_methods	POST	true
	}

	location /images {
		root images
		autoindex	true
		allowed_methods	GET		true
	}

	location /mercadolivre {
		redirection www.mercadolivre.com.br
		allowed_methods	GET		true
	}
}

server2 {

	listen 8083 8084 8085
	server_name www.site2.com green
	client_max_body_size 8000000

	error_page 301 pages/errors/301.html
	error_page 400 pages/errors/400.html
	error_page 403 pages/errors/403.html
	error_page 404 pages/errors/404.html
	error_page 405 pages/errors/405.html
	error_page 500 pages/errors/500.html


	location / {
		root pages/site2
		upload_path /uploads
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		false
		allowed_methods	POST	true
	}

	location /pages {
		root pages
		upload_path /uploads
		cgi_pass	pass
		index	index.htm index.html index.php
		autoindex	false
		allowed_methods	GET		true
	}

		
	location /random {
		cgi_pass	pass
		cgi 		random/random
		root pages/site2
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /pages/site2 {
		root pages/site2
		upload_path /uploads
		index pag1.html
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /pages/site2/uploads {
		root /pages/site2
		upload_path /uploads
		index	upload.html
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /sum {
		root pages/site2
		upload_path pages/site2
		cgi_pass	pass
		cgi sum.py
		index	sum.html
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /images {
		root images
		autoindex	true
		allowed_methods	GET		true
	}

	location /mercadolivre {
		redirection www.mercadolivre.com.br
		allowed_methods	GET		true
	}
}
