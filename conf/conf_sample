sample_server_Z1 {

	listen 8080
	server_name localhost
	client_max_body_size 8000

	error_page 301 pages/errors/301.html
	error_page 400 pages/errors/400.html
	error_page 403 pages/errors/403.html
	error_page 404 pages/errors/404.html
	error_page 405 pages/errors/405.html
	error_page 500 pages/errors/500.html


	location / {
		#redirection www.amazon.com
		root pages/site1
		upload_path
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi sum.py
		cgi_param num1 5
		cgi_param num2 6
	}

	location /pages/site1 {
		root pages/site1
		upload_path pages/site1
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi sum.py
		cgi_param num1 5
		cgi_param num2 6
	}

	location /sum/ {
		root pages/site1/sum.html
		upload_path pages/site1
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi sum.py
		cgi_param num1 5
		cgi_param num2 6
	}

	location /images/ {
		root images
		autoindex	true
		allowed_methods	GET		true
	}

	location /pages/site1/uploads/ {
		root pages/site1/uploads
		autoindex	true
		allowed_methods	GET		true
	}


	location /mercadolivre {
		redirection www.mercadolivre.com.br
		root pages/site1
		upload_path /www/site1/uploads
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.htm index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi_param p1 um
		cgi_param p2 dois
	}
	location /sounds {
		#redirection www.amazon.com
		root pages/site1
		upload_path /uploads_sounds
		cgi_pass	pass
		autoindex	true
		#index nada vazio vacuo 
		index	index.htm index.html index.php
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi_param p10 dez
		cgi_param p20 vinte
	}
}



