sample_server_Z1 {

	listen 8080
	server_name localhost
	client_max_body_size 70000000

	error_page 301 pages/errors/301.html
	error_page 400 pages/errors/400.html
	error_page 403 pages/errors/403.html
	error_page 404 pages/errors/404.html
	error_page 405 pages/errors/405.html
	error_page 500 pages/errors/500.html


	location / {
		#redirection www.amazon.com
		root /pages/site1
		upload_path /uploads
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi sum.py
		cgi_param num1 5
		cgi_param num2 6
	}

	location /kapouet {
		root /tmp/www
		upload_path /uploads
		index	index.htm index.html index.php
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /pages/site1 {
		root pages/site1
		upload_path /uploads
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /sum {
		root pages/site1/sum.html
		upload_path pages/site1
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /images {
		root images
		autoindex	true
		allowed_methods	GET		true
	}

	location /pages/site1/uploads {
		root /pages/site1
		upload_path /uploads
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}


	location /mercadolivre {
		redirection www.mercadolivre.com.br
		root pages/site1
		upload_path /www/site1/uploads
		#index	index.htm index.html4 index.php
		index	index.htm index.htm index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}
}



sample_server_Z2 {

	listen 8081
	server_name localhost
	client_max_body_size 8000000

	error_page 301 pages/errors/301.html
	error_page 400 pages/errors/400.html
	error_page 403 pages/errors/403.html
	error_page 404 pages/errors/404.html
	error_page 405 pages/errors/405.html
	error_page 500 pages/errors/500.html


	location / {
		#redirection www.amazon.com
		root /pages/site2
		upload_path /uploads
		cgi_pass	pass
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi sum.py
		cgi_param num1 5
		cgi_param num2 6
	}

	location /pages/site2 {
		root /pages/site2
		upload_path /uploads
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /images {
		root images
		autoindex	true
		allowed_methods	GET		true
	}

	location /pages/site2/uploads {
		root /pages/site2
		upload_path /uploads
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /sum {
		root pages/site2/sum.html
		upload_path pages/site2
		#index	index.htm index.html4 index.php
		index	index.htm index.html index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}

	location /uploads {
		root pages/site2/uploads
		autoindex	true
		allowed_methods	GET		false
	}

	location /mercadolivre {
		redirection www.mercadolivre.com.br
		root pages/site2
		upload_path /www/site2/uploads
		#index	index.htm index.html4 index.php
		index	index.htm index.htm index.php
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	true
		allowed_methods	DELETE	true
	}
}

sample_server_Z3 {

	error_page 404 ./error/404.html
	error_page 403 ./error/403.html
	error_page 500 ./error/500.html
	listen 8083
	server_name www.site3.com
	client_max_body_size 10000
	error_page 600 ./error/600.html
	error_page 500 ./error/500.html
}
